# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
ALLOWED_USER_IDS=123456789,987654321

# Telegram Client (для чтения каналов)
# Получить на https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_SESSION_NAME=jarvis_client

# LM Studio
LM_BASE=http://127.0.0.1:1234/v1
LM_MODEL=llama-3.1-8b-instruct

# Gmail (опционально)
GMAIL_TOKEN_FILE=gmail_token.json
GMAIL_CREDS_FILE=credentials.json

# Database
DATABASE_URL=sqlite:///jarvis.db

# News Schedule (время в формате HH:MM)
NEWS_SCHEDULE_MORNING=10:00
NEWS_SCHEDULE_EVENING=21:00
NEWS_TIMEZONE=Europe/Moscow

# Group mode for bot
GROUP_MODE=mentions  # off/mentions/commands
